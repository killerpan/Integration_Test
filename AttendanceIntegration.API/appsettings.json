{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=attendance.db"
  },
  "MockApiSettings": {
    "BaseUrl": "https://localhost:7001",
    "ExportEndpoint": "/api/attendance/export/{companyId}"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-minimum-32-characters-for-hs256",
    "Issuer": "AttendanceIntegrationAPI",
    "Audience": "AttendanceIntegrationClients",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
